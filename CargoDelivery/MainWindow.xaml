<Window x:Class="CargoDelivery.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:CargoDelivery"
		mc:Ignorable="d"
		Title="Cargo Delivery" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="191*"/>
            <ColumnDefinition Width="205*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Write information about you :" HorizontalAlignment="Left" Height="51" Margin="58,10,0,0" VerticalAlignment="Top" Width="266" RenderTransformOrigin="0.59,0.431"/>
        <Label Content="Your Name:" HorizontalAlignment="Left" Height="25" Margin="10,61,0,0" VerticalAlignment="Top" Width="88"/>
        <Label Content=" Name:" HorizontalAlignment="Left" Height="25" Margin="10,61,0,0" VerticalAlignment="Top" Width="88" Grid.Column="1"/>
        <TextBox x:Name="SenderName" HorizontalAlignment="Left" Height="21" Margin="103,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.325,0.565" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="ReceiverName" HorizontalAlignment="Left" Height="21" Margin="103,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.325,0.565" TextChanged="TextBox_TextChanged" Grid.Column="1"/>
        <Label Content="Write information about receiver:" HorizontalAlignment="Left" Height="51" Margin="78,10,0,0" VerticalAlignment="Top" Width="266" Grid.Column="1"/>

    </Grid>
</Window>
