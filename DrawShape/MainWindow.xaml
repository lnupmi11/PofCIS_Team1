<Window x:Class="DrawShape.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawShape"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu x:Name="Menu" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="792">
            <MenuItem x:Name="FileMenu" Header="File&#xD;&#xA;" Height="28" Width="100" Click="FileMenu_Click">
                <MenuItem x:Name="NewButton" Header="New&#xD;&#xA;" HorizontalAlignment="Left" Height="28" Width="140" Click="NewButton_Click"/>
                <MenuItem x:Name="SaveButton" Header="Save" HorizontalAlignment="Left" Height="31" Width="140" Click="SaveButton_Click"/>
                <MenuItem x:Name="OpenButton" Header="Open" HorizontalAlignment="Left" Height="30" Width="140" Click="OpenButton_Click"/>
            </MenuItem>
            <MenuItem x:Name="ShapesMenu" Header="Shapes&#xD;&#xA;" Height="28" Width="100" Click="ShapesMenu_Click"/>
        </Menu>

    </Grid>
</Window>
